{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./tsc/",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021",
    "types": ["vitest/globals"]
  }
}
