{
  "name": "string-ts",
  "version": "1.2.0",
  "description": "Strongly-typed string functions.",
  "main": "dist/commonjs/index.js",
  "module": "dist/es/index.js",
  "jsnext:main": "dist/es/index.js",
  "author": "Gustavo Guichard <@gugaguichard>",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean-dist && npm run build:es && npm run build:cjs",
    "dev": "tsup ./src/index.ts --format esm,cjs --watch --dts",
    "lint": "eslint *.ts*",
    "tsc": "tsc",
    "test": "vitest run",
    "clean-dist": "rm -rf ./dist && mkdir dist",
    "build:es": "tsc --project tsconfig.build.json --module esnext --outDir \"./dist/es\"",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --outDir \"./dist/commonjs\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "latest",
    "eslint": "latest",
    "prettier": "latest",
    "typescript": "^5.1.6",
    "vitest": "latest"
  },
  "files": [
    "README.md",
    "./dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gustavoguichard/string-ts.git"
  },
  "bugs": {
    "url": "https://github.com/gustavoguichard/string-ts/issues"
  }
}
